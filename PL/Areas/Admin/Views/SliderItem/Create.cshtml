@model CreateSliderItemDTO
<div class="container-fluid d-flex justify-content-center align-items-center min-vh-100">
    <div class="row w-100">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-lg rounded">
                <div class="card-body">
                    <h4 class="text-primary text-center">Create Slider Item</h4>
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label class="font-weight-bold">Title</label>
                            <input asp-for="Title" type="text" class="form-control border-primary" placeholder="Title">
                            <span class="text-danger" asp-validation-for="Title"></span>
                        </div>
                        <div class="form-group">
                            <label class="font-weight-bold">Description</label>
                            <input asp-for="Description" type="text" class="form-control border-primary" placeholder="Description">
                            <span class="text-danger" asp-validation-for="Description"></span>
                        </div>
                        <div class="form-group">
                            <label class="font-weight-bold">Image</label>
                            <input asp-for="Image" type="file" class="form-control border-primary p-2">
                            <span class="text-danger" asp-validation-for="Image"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a class="btn btn-outline-secondary" asp-controller="SliderItem" asp-action="Index">Cancel</a>
                            <button type="submit" class="btn btn-primary">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
