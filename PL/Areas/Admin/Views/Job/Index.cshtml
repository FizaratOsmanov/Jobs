@model ICollection<AdminGetJobDTO>
@{
    string disabled = string.Empty;
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Jobs Table</h4>
                        <p class="card-description">
                            <a asp-action="Create" class="btn btn-success btn-sm">
                                <i class="fas fa-plus"></i> Create
                            </a>
                        </p>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>CompanyIconPath</th>
                                        <th style="max-width: 150px;">Title</th>
                                        <th style="max-width: 250px;">JobNature</th>
                                        <th>CategoryTitle</th>
                                        <th>IsDeleted</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (AdminGetJobDTO item in Model)
                                    {
                                        disabled = (item.IsDeleted) ? "disabled" : string.Empty;
                                        <tr>
                                            <td class="py-1">@item.Id</td>
                                            <td>
                                                <img style="object-fit: cover; width: 100px; height: 60px;"
                                                     src="~/Uploads/Jobs/@item.CompanyIconPath" alt="Inner Image" />
                                            </td>
                                            <td class="text-break" style="word-wrap: break-word; white-space: normal; max-width: 150px;">
                                                @item.Title
                                            </td>
                                            <td class="text-break" style="word-wrap: break-word; white-space: normal; max-width: 250px;">
                                                @item.JobNature
                                            </td>
                                            <td class="text-break" style="word-wrap: break-word; white-space: normal; max-width: 250px;">
                                                @item.CategoryTitle
                                            </td>
                                            <td>@item.IsDeleted</td>
                                            <td style="white-space: nowrap;">
                                                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                                <a class="btn btn-warning btn-sm d-inline-block mx-1 text-white" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                                <a class="btn btn-danger btn-sm d-inline-block mx-1 @disabled" asp-action="SoftDelete" asp-route-id="@item.Id">SoftDelete</a>
                                                <a class="btn btn-danger btn-sm d-inline-block mx-1" asp-action="HardDelete" asp-route-id="@item.Id">HardDelete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
