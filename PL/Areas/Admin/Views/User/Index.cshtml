@model ICollection<AdminGetDTO>

@{
    ViewData["Title"] = "Username";
}

<div class="container mt-4">
    <h2 class="text-center text-primary mb-4">İstifadəçilər</h2>

    <div class="table-responsive">
        <table class="table table-hover table-striped shadow-sm rounded">
            <thead class="bg-dark text-white">
                <tr>
                    <th class="text-center">İstifadəçi Adı</th>
                    <th class="text-center">Email</th>
                    <th class="text-center">Əməliyyatlar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (AdminGetDTO item in Model)
                {
                    <tr>
                        <td class="align-middle text-center">@item.UserName</td>
                        <td class="align-middle text-center">@item.Email</td>
                        <td class="align-middle text-center">
                            <a href="#" class="btn btn-sm btn-warning">Redaktə et</a>
                            <a href="#" class="btn btn-sm btn-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>