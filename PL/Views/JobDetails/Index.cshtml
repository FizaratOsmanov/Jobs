@model JobDetailDTO
<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
	<div class="container">
		<div class="row gy-5 gx-4">
			<div class="col-lg-8">
				
				<div class="d-flex align-items-center mb-5">
					<img class="flex-shrink-0 img-fluid border rounded" src="~/Uploads/Jobs/@Model.CompanyIconPath" alt="" style="width: 80px; height: 80px;">
					<div class="text-start ps-4">
						<h3 class="mb-3">@Model.Title</h3>
						<span class="text-truncate me-3"><i class="fa fa-map-marker-alt text-primary me-2"></i>@Model.Location</span>
						<span class="text-truncate me-3"><i class="far fa-clock text-primary me-2"></i>@Model.JobNature</span>
						<span class="text-truncate me-0"><i class="far fa-money-bill-alt text-primary me-2"></i>$@Model.MinSalary - $@Model.MaxSalary</span>
					</div>
				</div>
				<div class="mb-5">
					<h4 class="mb-3">Job description</h4>
					<p>@Model.Description</p>
					<h4 class="mb-3">Responsibility</h4>
					<p>@Model.Responsiblity</p>
					<ul class="list-unstyled">
						<li><i class="fa fa-angle-right text-primary me-2"></i>_______________________________</li>
						<li><i class="fa fa-angle-right text-primary me-2"></i>_______________________________</li>
						<li><i class="fa fa-angle-right text-primary me-2"></i>_______________________________</li>
						<li><i class="fa fa-angle-right text-primary me-2"></i>_______________________________</li>
						<li><i class="fa fa-angle-right text-primary me-2"></i>_______________________________</li>
					</ul>
					<h4 class="mb-3">Qualifications</h4>
					<p>@Model.Qualification</p>
					<ul class="list-unstyled">
						<li><i class="fa fa-angle-right text-primary me-2"></i>_______________________________</li>
						<li><i class="fa fa-angle-right text-primary me-2"></i>_______________________________</li>
						<li><i class="fa fa-angle-right text-primary me-2"></i>_______________________________</li>
						<li><i class="fa fa-angle-right text-primary me-2"></i>_______________________________</li>
						<li><i class="fa fa-angle-right text-primary me-2"></i>_______________________________</li>
					</ul>
				</div>
				<div class="col-lg-4">
					<div class="bg-light rounded p-5 mb-4 wow slideInUp" data-wow-delay="0.1s">
						<h4 class="mb-4">Job Summery</h4>
						<p><i class="fa fa-angle-right text-primary me-2"></i>Published On: @Model.CreatedDate</p>
						<p><i class="fa fa-angle-right text-primary me-2"></i>Vacancy: @Model.VacancyCount</p>
						<p><i class="fa fa-angle-right text-primary me-2"></i>Job Nature: @Model.JobNature</p>
						<p><i class="fa fa-angle-right text-primary me-2"></i>Salary: $@Model.MinSalary - $@Model.MaxSalary</p>
						<p><i class="fa fa-angle-right text-primary me-2"></i>Location: @Model.Location</p>
						<p class="m-0"><i class="fa fa-angle-right text-primary me-2"></i>Date Line: @Model.DateLine</p>
					</div>
					<div class="bg-light rounded p-5 wow slideInUp" data-wow-delay="0.1s">
						<h4 class="mb-4">Company Detail</h4>
						<p class="m-0">@Model.CompanyDetail</p>
					</div>
				</div>
				
			</div>
		</div>
	</div>
</div>

