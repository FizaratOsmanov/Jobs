@model ICollection<GetCommentDTO>

<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <h1 class="text-center mb-5">Our Clients Say!!!</h1>

        <div class="d-flex justify-content-end mb-3">
            <!-- Modal açan düymə -->
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#commentModal">
                Add Comment
            </button>
        </div>

        <div id="commentList">
            @foreach (var item in Model.OrderBy(c => c.FirstName))  
            {
                <div class="testimonial-item bg-light rounded p-3 mb-3 d-flex align-items-center" style="max-width: 100%; min-height: 80px;">
                    <img class="img-fluid rounded-circle me-3" src="Uploads/UserProfiles/@item.PhotoPath" style="width: 60px; height: 60px;">
                    <div class="me-3">
                        <h5 class="mb-1">@item.FirstName</h5>
                        <small class="text-muted">@item.Profession</small>
                    </div>
                    <p class="mb-0 flex-grow-1">@item.Message</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Comment Modal -->
<div class="modal fade" id="commentModal" tabindex="-1" aria-labelledby="commentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-primary" id="commentModalLabel">Add a Comment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="commentForm" asp-controller="Testimonial" asp-action="Create" method="post">
                    <div class="mb-3">
                        <label for="message" class="form-label">Your Comment</label>
                        <textarea class="form-control" id="message" name="Message" rows="4" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
