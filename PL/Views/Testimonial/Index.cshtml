

@model ICollection<GetCommentDTO>

<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <h1 class="text-center mb-5">Our Clients Say!!!</h1>

        <div class="d-flex justify-content-end mb-3">
            <a asp-controller="Testimonial" asp-action="Create" class="btn btn-primary">Add Comment</a>
        </div>

        <div class="owl-carousel testimonial-carousel">
            @foreach (GetCommentDTO item in Model)
            {
                <div class="testimonial-item bg-light rounded p-4">
                    <i class="fa fa-quote-left fa-2x text-primary mb-3"></i>
                    <p>@item.Message</p>
                    <div class="d-flex align-items-center">
                        <img class="img-fluid flex-shrink-0 rounded" src="Uploads/UserProfiles/@item.PhotoPath" style="width: 50px; height: 50px;">
                        <div class="ps-3">
                            <h5 class="mb-1">@item.FirstName</h5>
                            <small>@item.Profession</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


